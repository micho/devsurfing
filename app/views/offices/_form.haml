= form_for(@office) do |f|
  - if @office.errors.any?
    #error_explanation
      %h2
        == #{pluralize(@office.errors.count, "error")} prohibited this office from being saved:
      %ul
      - @office.errors.full_messages.each do |msg|
        %li= msg

  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :description
    %br
    = f.text_area :description

  .field
    = f.label :address
    %br
    = f.text_field :address

  .field
    = f.label :city
    %br
    = f.text_field :city

  .field
    = f.label :country
    %br
    = f.select :country, country_options

  .field
    = f.label :desks
    %br
    = f.text_field :desks

  .actions
    = f.submit
